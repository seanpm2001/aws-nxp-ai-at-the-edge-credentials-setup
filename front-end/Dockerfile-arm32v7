FROM node as builder
# If try to build quasar app using arm32v7 it fails
#FROM arm32v7/node:10-alpine

RUN npm install -g @quasar/cli

WORKDIR /usr/src
COPY package*.json ./
RUN npm install

COPY . .

# Build SPA app
RUN quasar build -- -m spa -t mat

